<h1>Listing Users</h1>

<div class='row'>
  <div class='col-sm-8'>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th><span class='glyphicon glyphicon-scissors'></span>Latitude</th>
        <th>Longitude</th>
        <th>Address</th>
        <th>Description</th>
        <th>Title</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.latitude %></td>
          <td><%= user.longitude %></td>
          <td><%= user.address %></td>
          <td><%= user.description %></td>
          <td><%= user.title  %></td>
          <td><%= link_to 'Show', user %></td>
          <td><%= link_to 'Edit', edit_user_path(user) %></td>
          <td><span class='glyphicon glyphicon-trash'></span><%= link_to "<span class='glyphicon glyphicon-trash'></span>", user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New User', new_user_path %>
  </div>

  <div class='col-sm-4'>
    <div style='width: 800px;'>
      <div id="map" style='width: 400px; height: 200px;'></div>
    </div>
  </div>
</div>

